<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/showback"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_back"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/BackgroundS"
            android:orientation="vertical">



<ImageView
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:id="@+id/profile_img"
    android:layout_gravity="center"
    android:src="@drawable/ic_camera_24dp"

    >

</ImageView>
            <!--            <com.mikhaellopez.circularimageview.CircularImageView-->
<!--                android:layout_width="250dp"-->
<!--                android:layout_height="200dp"-->
<!--                android:src="@drawable/ic_camera_24dp"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginTop="10dp"-->
<!--                app:civ_shadow="true"-->
<!--                app:civ_border_width="1dp"-->
<!--                app:civ_shadow_radius="3dp"-->
<!--                android:id="@+id/profile_img"-->
<!--                android:layout_marginBottom="15dp"-->
<!--                tools:ignore="MissingClass" />-->

            <ImageView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:id="@+id/select_img_id"
                android:src="@drawable/ic_camera_24dp" />
        </LinearLayout>
        <EditText
            android:id="@+id/profileetuserName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:textColorHint="#2CA7E0"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit"
            android:padding="20dp"
            />
        <EditText
            android:id="@+id/profileetEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textColorHint="#2CA7E0"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit"
            android:padding="20dp"
            />
        <EditText
            android:id="@+id/profileetphone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:inputType="phone"
            android:padding="20dp"
            android:hint="Number"
            android:textColorHint="#2CA7E0" />

        <Button
            android:id="@+id/update_btn_id"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text=" UPDATE "
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:elevation="5dp"
            />




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>